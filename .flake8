[flake8]
max-complexity = 5
per-file-ignores =
    # imported but unused
    __init__.py: F401
    # All docstrings in tests
    tests/**.py: D
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # No need to traverse the venv dir
    .venv
